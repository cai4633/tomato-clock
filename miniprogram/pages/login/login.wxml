<!--pages/login/login.wxml-->
<view class="login">
  <view class="avatar">
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class="name">
    <open-data type="userNickName"> </open-data>
  </view>
  <view class="btn">
    <button class="padding" open-type="getUserInfo" bindgetuserinfo="login" withCredential='true'>登录</button>
  </view>
  <view hover-class="none">
    <text> 使用微信  点击登录 ></text>
  </view>
</view>