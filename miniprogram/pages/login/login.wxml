<!--pages/login/login.wxml-->
<view class="login">
  <view class="avatar">
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class="name">
    <open-data type="userNickName"> </open-data>
  </view>
  <view class="btn">
    <button class="padding" open-type="getUserInfo" bindgetuserinfo="login" withCredential='true'>登录</button>
  </view>
  <navigator url="/pages/binding/binding" hover-class="none">
    <text>还没有与pc端绑定？去绑定 ></text>
  </navigator>
</view>