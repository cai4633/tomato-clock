/* components/tConfirm/tConfirm.wxss */
.t-confirm{
  position: fixed;
  top: 0;
  left: 0;
  background-color: #f0f0f0;
  width: 100vw;
  height: 100vh;
}
.t-confirm .active {
  color: #FD986E;
}
.t-confirm>.container {
  padding: 14rpx;
  width: 80%;
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
}



.t-confirm>.container .content {}

.t-confirm>.container .action {
  display: flex;
  margin-top: 14rpx;
  font-size: 28rpx;
}

.t-confirm>.container .action .cancel {
  flex: 1;
  border-right: 2px solid #FD986E;
}

.t-confirm>.container .action .enter {
  flex: 1;

}


.content>textarea {
  box-sizing: border-box;
  width: 100%;
  height: 5em;
  text-align: left;
  font-size: 28rpx;
  background-color: #f9f9f9;
  padding: .5em;
}
