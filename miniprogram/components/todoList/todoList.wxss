/* components/todoList/todoList.wxss */
@import '../../common/wxss/mixins.wxss';

.todo-list {
  height: 300px;
  font-size: 28rpx;
}

.todo-list .li {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 5px 10px;
  background-color: var(--theme-bg);
  margin: 10rpx 10px;
  border-radius: 10rpx;
}

.todo-list .li .select {
  border: 1px solid var(--theme-color);
  margin: 5px 10px;
  width: 30rpx;
  height: 30rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
  position: relative;
}

.todo-list .li .finished::after {
  content: '';
  width: 60%;
  height: 60%;
  background-color: var(--theme-color);
  border-radius: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.todo-list .li .text {
  flex: 1;
}